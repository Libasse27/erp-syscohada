# EditorConfig - Configuration pour les éditeurs de code
# https://editorconfig.org

root = true

# Règles pour tous les fichiers
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 2

# Fichiers JavaScript/TypeScript
[*.{js,jsx,ts,tsx}]
indent_size = 2

# Fichiers JSON
[*.json]
indent_size = 2

# Fichiers Markdown
[*.md]
trim_trailing_whitespace = false
max_line_length = off

# Fichiers YAML
[*.{yml,yaml}]
indent_size = 2

# Fichiers Python (si utilisé)
[*.py]
indent_size = 4

# Makefile
[Makefile]
indent_style = tab
