# Configuration de l'application
NODE_ENV=development
PORT=5000

# Base de donn√©es MongoDB
MONGODB_URI=mongodb://localhost:27017/erp-syscohada
MONGODB_TEST_URI=mongodb://localhost:27017/erp-syscohada-test

# JWT Configuration
JWT_ACCESS_SECRET=votre_secret_access_token_tres_securise_a_changer
JWT_REFRESH_SECRET=votre_secret_refresh_token_tres_securise_a_changer
JWT_ACCESS_EXPIRE=15m
JWT_REFRESH_EXPIRE=7d

# Email Configuration (Nodemailer)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=votre-email@gmail.com
SMTP_PASS=votre-mot-de-passe-app
EMAIL_FROM=noreply@erp-syscohada.com

# Cloudinary (Upload d'images)
CLOUDINARY_CLOUD_NAME=votre_cloud_name
CLOUDINARY_API_KEY=votre_api_key
CLOUDINARY_API_SECRET=votre_api_secret

# Mobile Money APIs
ORANGE_MONEY_API_KEY=votre_orange_money_api_key
ORANGE_MONEY_API_SECRET=votre_orange_money_secret
ORANGE_MONEY_BASE_URL=https://api.orange.com/orange-money-webpay/dev/v1

WAVE_API_KEY=votre_wave_api_key
WAVE_API_SECRET=votre_wave_secret
WAVE_BASE_URL=https://api.wave.com/v1

# Configuration SYSCOHADA
DEFAULT_VAT_RATE=18
DEFAULT_CURRENCY=XOF
COMPANY_NINEA=
COMPANY_RC=

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Uploads
MAX_FILE_SIZE=5242880
UPLOAD_PATH=./uploads

# Logs
LOG_LEVEL=info
LOG_FILE=./logs/app.log

# CORS
FRONTEND_URL=http://localhost:3000

# Session
SESSION_SECRET=votre_session_secret_tres_securise_a_changer
