# Configuration Frontend

# URL de l'API Backend
REACT_APP_API_URL=http://localhost:5000/api

# Environnement
REACT_APP_ENV=development

# Nom de l'application
REACT_APP_NAME=ERP SYSCOHADA

# Version
REACT_APP_VERSION=1.0.0

# Nombre d'éléments par page (pagination)
REACT_APP_ITEMS_PER_PAGE=10

# Délai de debounce pour la recherche (ms)
REACT_APP_DEBOUNCE_DELAY=300

# Taille maximale des fichiers uploadés (en octets)
REACT_APP_MAX_FILE_SIZE=5242880

# Formats de fichiers acceptés
REACT_APP_ACCEPTED_IMAGE_FORMATS=.jpg,.jpeg,.png,.gif

# Devise par défaut
REACT_APP_DEFAULT_CURRENCY=XOF

# Taux de TVA par défaut (%)
REACT_APP_DEFAULT_VAT_RATE=18

# Langue par défaut
REACT_APP_DEFAULT_LANGUAGE=fr

# Support utilisateur
REACT_APP_SUPPORT_EMAIL=support@erp-syscohada.com
REACT_APP_SUPPORT_PHONE=+221 XX XXX XX XX
